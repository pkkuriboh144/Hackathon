        <!--<action android:name="com.example.xxxx.confirmnumber"/>-->
        <!--<categeory android:name="android.intent.categeory.LAUNCHER"/>-->
        <!--</intent-filter>-->
        <!--</activity>-->

    </LinearLayout>
</ScrollView>